	"item": [
		{
			"name": "{{base-url}}/login",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "b6d5921e-c5b6-4570-adb2-b45b19fd8725",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Status is 'success'\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.status).to.eql(\"success\");",
							"});",
							"",
							"pm.test(\"Message 'Successfully logged in.'\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.message).to.eql(\"Successfully logged in.\");",
							"});",
							"",
							"pm.test(\"Authorization to be a string\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.Authorization).to.be.a(\"String\");",
							"    pm.environment.set(\"token\", jsonData.Authorization);",
							"});",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"name": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"{{admin-email}}\",\n  \"password\": \"{{admin-password}}\"\n}"
				},
				"url": {
					"raw": "{{base-url}}/auth/login",
					"host": [
						"{{base-url}}"
					],
					"path": [
						"auth",
						"login"
					]
				}
			},
			"response": []
		},
