{
	"info": {
		"_postman_id": "4d37ab80-a2e3-4500-9aa2-1f098e000afc",
		"name": "Flask Restplus API Auth Generator",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
